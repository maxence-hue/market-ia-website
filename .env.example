# Webhook Zapier/n8n pour formulaire contact
ZAPIER_WEBHOOK_URL=https://hooks.zapier.com/hooks/catch/YOUR_ID/

# Webhook pour formulaire devis (optionnel, sinon utilise ZAPIER_WEBHOOK_URL)
ZAPIER_DEVIS_WEBHOOK_URL=https://hooks.zapier.com/hooks/catch/YOUR_ID/

# URL du site (automatique sur Netlify, localhost en dev)
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Tina Cloud - Pour éditer le contenu en production
# Obtenez ces valeurs sur https://app.tina.io
NEXT_PUBLIC_TINA_CLIENT_ID=your_client_id_here
TINA_TOKEN=your_token_here

# Admin Custom - Interface d'administration
# Générez un secret avec: openssl rand -base64 32
AUTH_SECRET_KEY=your-secret-key-here

# Admin Credentials
# Générez le hash avec: npm run hash-password votre-mot-de-passe
ADMIN_EMAIL=admin@market-ia.fr
ADMIN_PASSWORD_HASH=your-password-hash-here

# ============================================
# SANITY CMS
# ============================================
# Obtenez votre Project ID sur https://sanity.io/manage
NEXT_PUBLIC_SANITY_PROJECT_ID=your-project-id-here
NEXT_PUBLIC_SANITY_DATASET=production
NEXT_PUBLIC_SANITY_API_VERSION=2024-01-01

# Token API Sanity (optionnel, pour les données en temps réel)
# Créez-le sur https://sanity.io/manage > API > Tokens
SANITY_API_TOKEN=your-sanity-token-here

# ============================================
# VERCEL BLOB STORAGE
# ============================================
# Pour héberger des images
# Obtenez le token sur https://vercel.com/dashboard/stores
BLOB_READ_WRITE_TOKEN=vercel_blob_rw_xxxxxxxxxxxxx
